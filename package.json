{
  "name": "@ftapiat/js-rut-utils",
  "version": "0.1.1",
  "description": "Permite validar, limpiar y formatear RUT chilenos en Javascript",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --config .prettierrc.json --write \"src/**/*.ts\"",
    "lint": "npx eslint \"{src,apps,libs,test}/**/*.ts\" -c .eslintrc.json",
    "test": "jest --config jest.config.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && npm i --package-lock-only && git add ."
  },
  "keywords": [
    "rut",
    "RUT",
    "Chile",
    "validar",
    "modulo11",
    "limpiar",
    "generar",
    "formatear",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ftapiat/js-rut-utils.git"
  },
  "author": "ftapiat",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/jest": "^28.1.6",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "babel-jest": "^28.1.3",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.3.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.6.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unicorn": "^43.0.2",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "regenerator-runtime": "^0.13.9",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  },
  "files": [
    "lib/**/*"
  ],
  "bugs": {
    "url": "https://github.com/ftapiat/js-rut-utils/issues"
  },
  "homepage": "https://github.com/ftapiat/js-rut-utils#readme",
  "directories": {
    "doc": "doc",
    "lib": "lib"
  }
}
